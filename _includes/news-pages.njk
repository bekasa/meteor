
<h3>News Bytes From Around The Web</h3>

<div class="blog_grid">
  {%- for item in news | reverse -%}
    {%- if loop.index0 < 4 -%}              
      <div class="blog_item p-2 m-2 border border-gray-700 bg-white">
        <svg
          class="icon icon-mlogo"
          aria-labelledby="logo"
          role="img"
          width="25"
          height="25"
        >
          <use xlink:href="/symbol-defs.svg#icon-mlogo"></use>
        </svg>
        <div class="text-gray-900">
        {{ item.name }}
        </div>       
        <div class="text-sm">
          <time datetime="{{ item.date }}">{{ item.date | dateReadable }}</time>
        </div>                                            
        <div>{{ item.text }}</div>
      </div>
    {%- endif -%}                
  {%- endfor -%}
</div>




